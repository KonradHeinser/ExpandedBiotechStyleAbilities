            <xpath>Defs/GeneDef[defName="FoamSpray"]/displayOrderInCategory</xpath>
            <value>
                <displayOrderInCategory>1</displayOrderInCategory>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/GeneDef[defName="FoamSpray"]</xpath>
            <value>
                <displayOrderInCategory>1</displayOrderInCategory>
