    <!--Hemogenic Pawns-->
    
    <GeneDef>
        <defName>EBSA_BloodyEclipse</defName>
        <label>bloody eclipse</label>
        <description>Carriers of this gene can release a bunch of archite infused hemogen into the air that will settle in the clouds high above, and cause them to darken in a way that blots out the sun, and gives onlookers a similar spectacle to an eclipse.</description>
        <iconPath>UI/Icons/Genes/Gene_LongJumpLegs</iconPath>
        <prerequisite>Hemogenic</prerequisite>
        <displayCategory>Hemogen</displayCategory>
        <abilities>
            <li>EBSA_BloodyEclipse</li>
        </abilities>
        <descriptionHyperlinks>
            <AbilityDef>EBSA_BloodyEclipse</AbilityDef>
        </descriptionHyperlinks>
        <biostatArc>1</biostatArc>
    </GeneDef>

    <!--Genetic Psycasts-->
    <GeneDef>
        <defName>EBSA_DeadenNerves</defName>
        <label>deaden nerves</label>
        <description>Carriers grow have a unique gland in their brain just above the spine that allows them to almost completely ignore pain for a brief time when the pawn chooses to. After the gland finishes excreting its chemicals, it needs a few hours to refill.</description>
        <iconPath>UI/Abilities/Painblock</iconPath>
        <displayCategory>Ability</displayCategory>
        <displayOrderInCategory>200</displayOrderInCategory>
        <abilities>
            <li>EBSA_DeadenNerves</li>
        </abilities>
        <descriptionHyperlinks>
